use_frameworks!

def common_pods
    pod 'Alamofire', '4.3.0'
    pod 'AlamofireObjectMapper', '4.0.1'
    pod 'ObjectMapper', '2.0'

    pod 'BrightFutures', '5.1.0'
    pod 'Down', '0.3.2'
    pod 'Result', '3.1.0'
    pod 'Spine', :git => 'https://github.com/invliD/Spine.git', :commit => '1171b90'
    pod 'SDWebImage/Core', '4.0.0'
end

def ios_pods
    pod 'BMPlayer', '0.8.7'
    pod 'DZNEmptyDataSet', '1.8.1'
    pod 'Hero'
    pod 'PinpointKit', :git => 'https://github.com/Lickability/PinpointKit', :commit => 'dd5731c'
    pod 'Shimmer', '1.0.2'
end

target 'openHPI-iOS' do
    platform :ios, '9.0'
    common_pods
    ios_pods

end

